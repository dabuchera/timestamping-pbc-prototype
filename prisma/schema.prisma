// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Contract {
  id            String   @id @default(cuid())
  title         String
  digest        String
  dataset       String
  setPoint      Float
  deviation     Float
  // This is the penalty per 5% per Interval
  // That means if the datapoints are under or above the deviation
  // for 5% of the time -> this is the penalty
  penalty       Float
  // Here are two options -> Weekly / Monthly
  checkInterval String
  createdAt     DateTime @default(now()) @map(name: "created_at")
  updatedAt     DateTime @default(now()) @map(name: "updated_at")

  @@map(name: "contracts")
}

model Dataset {
  id        String   @id @default(cuid())
  name      String
  value     Float
  timestamp DateTime

  @@map(name: "datasets")
}

model User {
  id        String   @id @default(cuid())
  name      String
  password  String

  @@map(name: "users")
}
